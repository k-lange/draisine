#!/usr/bin/env node

var draisine = require('../lib');
var argv = require('yargs').argv;
var table = require('easy-table');

draisine({
    from: argv.from,
    to: argv.to,
    on: argv.on
}, function (error, result) {
    if (error) {
        console.log(error);
        return;
    }

    console.log('Found', result.length, 'results.');
    if (result.length) {
        console.log('');
        console.log(table.printArray(result));
    }
});
